/* pages/userConsole/userConsole.wxss */
.ucItem {
  height: 3rem;
  line-height: 3rem;
  padding: 30rpx 0 12rpx;
}

.leftIcon {
  width: 3rem;

  border-radius: 12rpx;
  text-align: center;
  font-size: 1.8rem;
  color: var(--icon-color);
  background: var(--icon-bg);
  margin-right: 1rem;
}

.rightPane {
  width: 15rem;
  display: inline-block;
  border-bottom: var(--border-twopx);
}

.ucItem:last-child .rightPane {
  border-bottom: none;
}

.rightIcon {
  float: right;
  font-size: 1.5rem;
  color: #999999;
}
