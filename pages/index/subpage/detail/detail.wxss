.top {
  display: flex;
  justify-content: space-between;
  height: 3rem;
  line-height: 3rem;
  padding: 25rpx 0 30rpx;
}
.user{
  display: flex;
  justify-content: space-between;
}
.userAvatar {
  height: 3rem;
  width: 3rem;
  border-radius: 50%;
  margin-right: 1rem;
  box-shadow: var(--avatar-shadow);
  overflow: hidden;
}
.userInfo {
  display: flex;
  flex-direction: column;
}
.userInfo h1,
.userInfo text {
  height: 50%;
  line-height: 1.5rem;
}
.userInfo text:last-child {
  font-size: 12px;
  color: gray;
}
.more {
}

.content {
  padding: 0 15rpx 30rpx;
}