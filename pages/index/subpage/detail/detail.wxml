<import src="../../../template/template.wxml" />
<view>
  <view class="top">
    <view class="user">
      <image class="userAvatar" type="userAvatarUrl" />
      <!-- <open-data class="avatar" type="userAvatarUrl"></open-data> -->
      <view class="userInfo">
        <h1>{{detail.name}}</h1>
        <text class="dateText">{{detail.release}}</text>
      </view>
    </view>
    <view class="more dateText ">
      <a class="activeText">{{detail.typeName}}</a>
    </view>
  </view>
  <view class="content describeText">
    <text>{{detail.content}}</text>
  </view>
  <view class='imgBox'>
    <view class='img' wx:for='{{detail.image_arr}}' wx:key="*this">
      <image src='{{item}}' data-url="{{item}}" data-urls="{{detail.image_arr}}" mode="aspectFill" catchtap="previewImg"></image>
    </view>
  </view>
</view>