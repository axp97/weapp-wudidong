.textView {
  padding-bottom: 1rem;
}

.imgBox {
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* padding-bottom: 1rem; */
}

.img {
  width: 100px;
  height: 100px;

  position: relative;
}
.img image {
  width: 100%;
  height: 100%;
}

.deleteBtn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30px;
  font-size: 12px;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  line-height: 30px;
}
.uploadImgBtn {
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  border: 1px solid #ccc;
}

.completeBtn {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  /* background: var(--icon-color); */
}
.pickerBox {
  display: flex;
  padding-bottom: 0.6rem;
  font-size: 14px;
}
.leftLabel {
  width: 5rem;
}
.pickerBox > picker,
.pickerBox > input {
  width: 15rem;
  border-bottom: 1px solid #ccc;
}
.pickerBox icon {
  float: right;
}
