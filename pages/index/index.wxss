.headerTab {
  width: 100%;
  white-space: nowrap;
  border-bottom: 2rpx solid #eeeeee;
  text-align: center;
  line-height: 88rpx;
  margin-bottom: 10rpx;
}
.headerTabItem {
  width: 20%;
  color: #434343;
  display: inline-block;
}
.headerTabItem.active {
  color: #006600;
  border-bottom: 4rpx solid #006600;
}
.smallTypeListItem {
  display: inline-block;
  border-radius: 20rpx;
  padding: 0 10rpx;
  margin: 0 10rpx 10rpx 0;
}
