/* 重复样式 */
.userProfile {
  height: 3rem;
  line-height: 3rem;
  border-bottom: 1rpx solid #eeeeee;
  padding: 25rpx 2% 30rpx;
}
.avatar {
  float: left;
  height: 3rem;
  width: 3rem;
  border-radius: 50%;
  margin-right: 1rem;
  box-shadow: 2px 2px 5px 0px rgba(0, 102, 0, 1);
  overflow: hidden;
}
.dataList > view {
  background: rgba(255, 255, 255, 0.75);
  margin-bottom: 20rpx;
  padding: 0 15rpx;
}
