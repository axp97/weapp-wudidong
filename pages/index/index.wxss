/**index.wxss**/

.headerTab {
    display: flex;
    justify-content: space-between;
    line-height: 88rpx;
}
.navIcon {
    width: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
}
.nav {
    width: calc(100% - 2rem);
    white-space: nowrap;
    border-bottom: var(--border-twopx);
    text-align: center;
    /* line-height: 88rpx; */
    margin-bottom: 10rpx;
}
.navItem {
    width: 20%;
    color: #434343;
    display: inline-block;
}
.navItem.active {
    color: var(--active-color);
    border-bottom: 4rpx solid var(--active-color);
}
.smallTypeListItem {
    display: inline-block;
    border-radius: 20rpx;
    padding: 0 10rpx;
    margin: 0 10rpx 10rpx 0;
}
.smallTypeListItem.active {
    /* background:  */
}
/* 重复样式 */

.dataList > view {
    background: rgba(255, 255, 255, 0.75);
    margin-bottom: 20rpx;
    box-shadow: 0 1px 6px 0 rgba(32, 33, 36, 0.28);
    /* padding: 0 15rpx; */
}
.dataList .top {
    display: flex;
    justify-content: space-between;
    height: 3rem;
    line-height: 3rem;
    padding: 25rpx 0 30rpx;
}
.dataList .user {
    display: flex;
    justify-content: space-between;
}
.user .userAvatar {
    height: 3rem;
    width: 3rem;
    border-radius: 50%;
    margin-right: 1rem;
    box-shadow: var(--avatar-shadow);
    overflow: hidden;
}
.user .userInfo {
    display: flex;
    flex-direction: column;
}
.user .userInfo h1,
.user .userInfo text {
    height: 50%;
    line-height: 1.5rem;
}
.user .userInfo text:last-child {
    font-size: 12px;
    color: gray;
}
.dataList .more {
}
.dataList .content {
    padding: 0 15rpx 30rpx;
}
.dataList .bottom {
    padding: 0 15rpx 10rpx;
    display: flex;
    justify-content: space-between;
    border-top: var(--border-onepx);
}
.dataList .bottom a {
    margin-left: 5rpx;
}
.imgBox {
    width: 100%;
    /* height: 100%; */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    /* padding-bottom: 2rem; */
}

.img {
    width: 100px;
    height: 100px;

    position: relative;
}
.img image {
    width: 100%;
    height: 100%;
}
