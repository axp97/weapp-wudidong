.loginBtn {
}

.userProfile {
  height: 3rem;
  line-height: 3rem;
  border-bottom: var(--border-onepx);
  padding: 25rpx 2% 30rpx;
}

.avatar {
  float: left;
  height: 3rem;
  width: 3rem;
  border-radius: 50%;
  margin-right: 1rem;
  box-shadow: var(--avatar-shadow);
  overflow: hidden;
}

.userInfo {
  display: flex;
  justify-content: center;
  /* height: 3.5rem; */
  line-height: 3.5rem;
  border-bottom: var(--border-onepx);
}

.listItem {
  display: flex;
  justify-content: center;
  flex-grow: 1;
  border-right: var(--border-onepx);
  margin-right: 10rpx;
}

.listItem icon {
  font-size: 1.5rem;
  color: var(--icon-color);
  margin-right: 0.5rem;
}

.listItem:last-child {
  border-right: none;
}

.aboutItem {
  line-height: 2.8rem;
  padding: 0 2%;
  border-bottom: var(--border-onepx);
}

.aboutItem:last-child {
  border-bottom: none;
}

.leftIcon {
  font-size: 1.2rem;
  margin-right: 15rpx;
}

.rightIcon {
  float: right;
  font-size: 1.5rem;
  color: #999999;
}
